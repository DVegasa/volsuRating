<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/colorButtonSmallDisabled" />
            <padding android:bottom="2dp"
                    android:left="40dp"
                    android:right="40dp"
                    android:top="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/colorButtonSmallPressed" />
            <padding android:bottom="2dp"
                    android:left="40dp"
                    android:right="40dp"
                    android:top="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/colorButtonSmallNormal" />
            <padding android:bottom="2dp"
                    android:left="40dp"
                    android:right="40dp"
                    android:top="2dp" />
        </shape>
    </item>

</selector>