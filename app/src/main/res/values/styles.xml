<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
            parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="AppTheme.SettingsActivityStyle">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ButtonSmall">
        <item name="android:fontFamily">@font/ptsans_bold</item>
        <item name="android:background">@drawable/bg_button_small</item>
        <item name="android:textColor">@color/colorButtonSmallText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">24dip</item>
    </style>

    <style name="AppTheme.ButtonWhite">
        <item name="android:fontFamily">@font/ptsans_bold</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">24dip</item>
    </style>

    <style name="AppTheme.TextViewBigNumber">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorTextBigNumber</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.TextViewCaption">
        <item name="android:textColor">@color/colorTextCaption</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.TextViewSubjectName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorTextSubject</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextViewSubjectNumber">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorTextBigNumber</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AppTheme.TextViewWelcome">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.LineSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLineSeparator</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
