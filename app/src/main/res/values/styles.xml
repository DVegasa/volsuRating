<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
            parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="AppTheme.ButtonSmall">
        <item name="android:fontFamily">@font/ptsans_bold</item>
        <item name="android:background">@drawable/bg_button_small</item>
        <item name="android:textColor">@color/colorButtonSmallText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">24dip</item>
    </style>

</resources>
